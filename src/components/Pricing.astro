---
const plans = [
  {
    name: "Starter",
    price: "$0",
    description: "Perfect for small teams and projects",
    features: [
      "1 project",
      "Up to 1 team members",
      "10,000 API requests/month",
      "Basic support",
      "Community access"
    ],
    cta: "Start free trial",
    popular: false
  },
  {
    name: "Professional",
    price: "$79",
    description: "Ideal for growing teams and businesses",
    features: [
      "Up to 15 team members",
      "Unlimited content types",
      "500,000 API requests/month",
      "25GB media storage",
      "Priority support",
      "Custom workflows",
      "Localization",
      "Advanced permissions"
    ],
    cta: "Start free trial",
    popular: true
  },
  {
    name: "Enterprise",
    price: "Custom",
    description: "For large organizations with complex needs",
    features: [
      "Unlimited team members",
      "Unlimited content types",
      "Custom API request limits",
      "Custom media storage",
      "Dedicated support",
      "Custom workflows",
      "Advanced localization",
      "SSO authentication",
      "SLA guarantees",
      "Dedicated environment"
    ],
    cta: "Contact sales",
    popular: false
  }
];
---

<section id="pricing" class="py-20">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Simple, transparent pricing</h2>
      <p class="text-xl text-gray-600">
        Choose the plan that's right for your team. All plans include a 14-day free trial.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {plans.map((plan, index) => (
        <div class={`bg-white rounded-xl overflow-hidden border ${plan.popular ? 'border-black shadow-lg sm:scale-105' : 'border-gray-200 shadow-sm'}`}>
          {plan.popular && (
            <div class="bg-black text-white text-center py-2 text-sm font-medium">
              Most Popular
            </div>
          )}
          <div class="p-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-2">{plan.name}</h3>
            <div class="flex items-baseline mb-4">
              <span class="text-4xl font-bold text-gray-900">{plan.price}</span>
              {plan.price !== "Custom" && <span class="text-gray-600 ml-1">/month</span>}
            </div>
            <p class="text-gray-600 mb-6">{plan.description}</p>
            <a 
              href="#" 
              class={`block text-center py-3 px-4 rounded-lg font-medium ${plan.popular ? 'bg-black text-white hover:bg-gray-800' : 'bg-gray-100 text-gray-900 hover:bg-gray-200'} transition-colors mb-6`}
            >
              {plan.cta}
            </a>
            <ul class="space-y-3">
              {plan.features.map(feature => (
                <li class="flex items-start">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
    
    <div class="max-w-3xl mx-auto text-center mt-16">
      <p class="text-gray-600 mb-6">
        Need a custom plan? Contact our sales team for a tailored solution.
      </p>
      <a href="#" class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-black rounded-lg hover:bg-gray-800 transition-colors">
        Contact sales
      </a>
    </div>
  </div>
</section>
